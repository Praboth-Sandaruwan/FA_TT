# Intermediate FastAPI SSR + HTMX application settings
INTERMEDIATE_PROJECT_NAME=Intermediate FastAPI
INTERMEDIATE_ENVIRONMENT=development
INTERMEDIATE_VERSION=0.1.0
INTERMEDIATE_API_PREFIX=/api
INTERMEDIATE_APP_HOST=0.0.0.0
INTERMEDIATE_APP_PORT=${INTERMEDIATE_APP_PORT:-8003}
INTERMEDIATE_RELOAD=true
INTERMEDIATE_LOG_LEVEL=INFO

# Database configuration (leverages shared docker-compose defaults)
INTERMEDIATE_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER:-app}:${POSTGRES_PASSWORD:-app}@${POSTGRES_HOST:-postgres}:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-app_db}
INTERMEDIATE_DB_ECHO=false

# Redis and job processing configuration
INTERMEDIATE_REDIS_URL=redis://:${REDIS_PASSWORD:-app}@${REDIS_HOST:-redis}:${REDIS_PORT:-6379}/0
INTERMEDIATE_JOB_QUEUE_NAME=intermediate:tasks
INTERMEDIATE_JOB_WORKER_NAME=intermediate-worker
INTERMEDIATE_JOB_TIMEOUT_SECONDS=300
INTERMEDIATE_JOB_RESULT_TTL_SECONDS=600
INTERMEDIATE_JOB_MAX_RETRIES=3
INTERMEDIATE_JOB_RETRY_BACKOFF_SECONDS=5,15,30

# Security tokens for API authentication workflows
INTERMEDIATE_JWT_SECRET_KEY=change-me
INTERMEDIATE_JWT_REFRESH_SECRET_KEY=change-me-refresh
INTERMEDIATE_JWT_ALGORITHM=HS256
INTERMEDIATE_ACCESS_TOKEN_EXPIRE_MINUTES=30
INTERMEDIATE_REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Session and CSRF cookie configuration
# Set INTERMEDIATE_SESSION_HTTPS_ONLY=false when developing over HTTP.
INTERMEDIATE_SESSION_SECRET_KEY=change-me-session
INTERMEDIATE_SESSION_COOKIE_NAME=intermediate_session
INTERMEDIATE_SESSION_MAX_AGE=1209600
INTERMEDIATE_SESSION_HTTPS_ONLY=true
INTERMEDIATE_SESSION_SAME_SITE=lax

# CORS configuration for API clients
INTERMEDIATE_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
INTERMEDIATE_ALLOW_CREDENTIALS=true
INTERMEDIATE_ALLOW_METHODS=*
INTERMEDIATE_ALLOW_HEADERS=*
