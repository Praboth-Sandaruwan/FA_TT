# Beginner FastAPI application settings
BEGINNER_PROJECT_NAME=Beginner FastAPI
BEGINNER_ENVIRONMENT=development
BEGINNER_VERSION=0.1.0
BEGINNER_API_PREFIX=/api
BEGINNER_APP_HOST=0.0.0.0
BEGINNER_APP_PORT=${BEGINNER_APP_PORT:-8002}
BEGINNER_RELOAD=true
BEGINNER_LOG_LEVEL=INFO

# Database configuration (leverages shared Compose variables)
BEGINNER_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER:-app}:${POSTGRES_PASSWORD:-app}@${POSTGRES_HOST:-postgres}:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-app_db}
BEGINNER_DB_ECHO=false

# Security tokens
BEGINNER_JWT_SECRET_KEY=change-me
BEGINNER_JWT_ALGORITHM=HS256
BEGINNER_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS configuration
BEGINNER_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
BEGINNER_ALLOW_CREDENTIALS=true
BEGINNER_ALLOW_METHODS=*
BEGINNER_ALLOW_HEADERS=*
