# Compose project name
COMPOSE_PROJECT_NAME=devstack

# Postgres
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_URL=postgresql://app:app@localhost:5432/app_db

# MongoDB
MONGO_INITDB_ROOT_USERNAME=app
MONGO_INITDB_ROOT_PASSWORD=app
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGODB_URI=mongodb://app:app@localhost:27017/?authSource=admin

# Redis
REDIS_PASSWORD=app
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:app@localhost:6379/0

# RabbitMQ
RABBITMQ_DEFAULT_USER=app
RABBITMQ_DEFAULT_PASS=app
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
AMQP_URL=amqp://app:app@localhost:5672/

# App ports
APP1_PORT=8000
APP2_PORT=8001
BEGINNER_APP_PORT=8002
INTERMEDIATE_APP_PORT=8003
ADVANCED_APP_PORT=8004

# Beginner app settings
BEGINNER_JWT_SECRET_KEY=change-me
BEGINNER_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Intermediate app settings
INTERMEDIATE_ENVIRONMENT=development
INTERMEDIATE_LOG_LEVEL=INFO
INTERMEDIATE_JWT_SECRET_KEY=change-me
INTERMEDIATE_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
INTERMEDIATE_CACHE_ENABLED=true
INTERMEDIATE_CACHE_TTL_SECONDS=60
INTERMEDIATE_REDIS_URL=redis://:app@localhost:6379/0
INTERMEDIATE_MONGO_URL=mongodb://localhost:27017
INTERMEDIATE_MONGO_DATABASE=intermediate_app
INTERMEDIATE_ACTIVITY_TTL_SECONDS=86400

# Advanced app settings
ADVANCED_REALTIME_TOKEN=change-me-realtime
ADVANCED_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ADVANCED_BOARD_CHANNEL=advanced:board
ADVANCED_ACTIVITY_CHANNEL=advanced:activity
ADVANCED_REDIS_URL=redis://:app@localhost:6379/2
ADVANCED_REDIS_IDEMPOTENCY_PREFIX=advanced:idempotency
ADVANCED_REDIS_IDEMPOTENCY_TTL_SECONDS=300
ADVANCED_EVENT_TRANSPORT=rabbitmq
ADVANCED_RABBITMQ_URL=amqp://app:app@localhost:5672/
ADVANCED_RABBITMQ_EXCHANGE=advanced.board.events
ADVANCED_RABBITMQ_QUEUE=advanced.board.events
ADVANCED_RABBITMQ_RETRY_EXCHANGE=advanced.board.events.retry
ADVANCED_RABBITMQ_RETRY_QUEUE=advanced.board.events.retry
ADVANCED_RABBITMQ_DLQ_EXCHANGE=advanced.board.events.dlq
ADVANCED_RABBITMQ_DLQ_QUEUE=advanced.board.events.dlq
ADVANCED_RABBITMQ_RETRY_DELAY_MS=5000
ADVANCED_RABBITMQ_MAX_RETRIES=5
ADVANCED_RABBITMQ_PREFETCH_COUNT=16
ADVANCED_SSE_HEARTBEAT_SECONDS=15
ADVANCED_WEBSOCKET_MAX_CONNECTIONS=256
ADVANCED_RECONNECT_INITIAL_DELAY_SECONDS=1.5
ADVANCED_RECONNECT_MAX_DELAY_SECONDS=12.0
