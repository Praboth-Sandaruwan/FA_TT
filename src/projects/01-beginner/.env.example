# Environment configuration for the Beginner Task Tracker project.
# Copy this file to `.env` within the same directory and adjust values as needed.

# Toggle debug behaviour and enable verbose error responses.
TASK_TRACKER_DEBUG=false

# Human readable name for the API surfaced in documentation.
TASK_TRACKER_PROJECT_NAME="Task Tracker API"

# Logging level recognised by the standard library logging module.
TASK_TRACKER_LOG_LEVEL=INFO

# Comma separated list of allowed CORS origins.
TASK_TRACKER_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
